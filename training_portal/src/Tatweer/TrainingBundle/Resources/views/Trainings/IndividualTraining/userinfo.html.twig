    <div class="titlepage"><div class="maintitlenews">  {{ 'PERSONAL INFORMATION'|trans({}, 'evaluation' ) }} </div></div>
    <div class="wrapper2">
     

    <table width="100%">
        <tr>
        <th  align="left" colspan="2" >{{ 'Employee Name'|trans({}, 'evaluation' , 'en') }}</th> 
        <td align="center">{% if app.request.getLocale() == 'ar' %} {{ userentity.FullArabicName }} {% else %} {{ userentity.DisplayName }} {% endif %} </td> 
        <th align="right" dir="rtl" >{{ 'Employee Name'|trans({}, 'evaluation' , 'ar') }}</th>
        
        <th  align="left" colspan="2" >{{ 'Grade'|trans({}, 'evaluation' , 'en') }}</th> 
        <td align="center">{{userentity.employeeGrade}}</td> 
        <th align="right" dir="rtl" >{{ 'Grade'|trans({}, 'evaluation' , 'ar') }}</th>
        </tr>
        
        <tr>
        <th align="left" colspan="2" >{{ 'Job Title'|trans({}, 'evaluation' , 'en') }}</th> 
        <td align="center">{{userentity.Title}}</td> 
        <th align="right" dir="rtl" >{{ 'Job Title'|trans({}, 'evaluation' , 'ar') }}</th>
        
        <th align="left"  colspan="2">{{ 'Dept. / Project'|trans({}, 'evaluation' , 'en') }}</th> 
        <td align="center">{{userentity.Department}}</td> 
        <th  align="right" dir="rtl" >{{ 'Dept. / Project'|trans({}, 'evaluation' , 'ar') }}</th>
        </tr>
        
        <tr>
        <th align="left" colspan="2" >{{ 'Employee No.'|trans({}, 'evaluation' , 'en') }}</th> 
        <td align="center">{{userentity.EmployeeNumber}}</td> 
        <th align="right" dir="rtl" >{{ 'Employee No.'|trans({}, 'evaluation' , 'ar') }}</th>
        
        <th align="left" colspan="2" >{{ 'Extension No.'|trans({}, 'evaluation' , 'en') }}</th> 
        <td align="center">{{userentity.Telephone|slice(-4)}}</td> 
        <th align="right" dir="rtl" >{{ 'Extension No.'|trans({}, 'evaluation' , 'ar') }}</th>
        </tr>
        
        
        {% if currentActivePeriod is defined or  lastActivePeriod  is defined %} 
        <tr>
        <th align="left"  colspan="2">{{ 'Appraisal Period'|trans({}, 'evaluation' , 'en') }}</th>
        <td colspan="3" align="center">  {% if currentActivePeriod %}   {{ currentActivePeriod[0].name }} {% elseif lastActivePeriod %} {{ lastActivePeriod[0].name }} {% endif %}   </td>
        <th align="right" dir="rtl" colspan="3">{{ 'Appraisal Period'|trans({}, 'evaluation' , 'ar') }}</th>
        </tr>
         {% endif %}
    </table>

    </div>