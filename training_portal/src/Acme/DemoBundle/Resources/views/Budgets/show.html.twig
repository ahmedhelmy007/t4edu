{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Budgets</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Idbudget</th>
                <td>{{ entity.idBudget }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ entity.startDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ entity.endDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{{ entity.deleted }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('budgets') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('budgets_edit', { 'id': entity.idBudget }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
